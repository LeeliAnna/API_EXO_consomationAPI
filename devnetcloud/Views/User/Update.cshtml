@{

    
}

@model UpdatePasswordForm;


<h1>Update User</h1>

<form method="post">

    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label>Old Password</label>
        <input asp-for="OldPassword" type="password" />
        <span class="text-danger" asp-validation-for="OldPassword"></span>
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div>
        <label>Password Confirmation</label>
        <input asp-for="ConfirmationPassword" type="password" />
        <span class="text-danger" asp-validation-for="ConfirmationPassword"></span>
    </div>

    <input type="submit" />

</form>